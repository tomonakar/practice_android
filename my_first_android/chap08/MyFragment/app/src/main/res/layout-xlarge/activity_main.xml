    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/listFragment"
        android:name="to.msn.wings.myfragment.ListFragment"
        android:layout_width="match_parent"
